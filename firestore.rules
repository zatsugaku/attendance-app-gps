rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // attendance コレクション: 認証済みユーザーは読み書き可能
    match /attendance/{documentId} {
      allow read, write: if request.auth != null;
    }

    // users コレクション: 認証済みユーザーは全員読み取り可能、書き込みは自分のみ
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // error_logs コレクション: 認証済みユーザーは自分のエラーログを書き込み可能、管理者は全件読み取り可能
    match /error_logs/{logId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null &&
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin');
    }

    // attendance_history コレクション: 認証済みユーザーは書き込み可能、読み取りは全員可能
    match /attendance_history/{historyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }

    // その他のコレクションはデフォルトで拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
